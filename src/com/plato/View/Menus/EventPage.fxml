<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>
<GridPane hgap="5.0" maxWidth="700.0" minWidth="700.0" vgap="5.0"
          xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1"
          fx:controller="Controller.Menus.EventPageController">
    <columnConstraints>
        <ColumnConstraints hgrow="SOMETIMES"/>
        <ColumnConstraints hgrow="SOMETIMES"/>
    </columnConstraints>
    <rowConstraints>
        <RowConstraints vgrow="SOMETIMES"/>
        <RowConstraints vgrow="SOMETIMES"/>
        <RowConstraints vgrow="SOMETIMES"/>
        <RowConstraints vgrow="SOMETIMES"/>
        <RowConstraints vgrow="SOMETIMES"/>
        <RowConstraints vgrow="SOMETIMES"/>
    </rowConstraints>
    <padding>
        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
    </padding>
    <ImageView fx:id="eventImg" fitHeight="144.0" fitWidth="663.0" pickOnBounds="true" preserveRatio="true"
               GridPane.columnSpan="2" GridPane.halignment="CENTER" GridPane.valignment="CENTER"/>
    <ImageView fx:id="eventGameImg" fitHeight="150.0" fitWidth="150.0" pickOnBounds="true" preserveRatio="true"
               GridPane.columnSpan="2" GridPane.halignment="CENTER" GridPane.rowIndex="2" GridPane.valignment="CENTER"/>
    <HBox alignment="CENTER" spacing="7.5" GridPane.columnSpan="2" GridPane.rowIndex="3">
        <Label fx:id="eventPrize" text="-">
            <font>
                <Font name="Ayuthaya" size="18.0"/>
            </font>
        </Label>
        <ImageView fx:id="coinImg" fitHeight="30.0" fitWidth="30.0" pickOnBounds="true" preserveRatio="true">
            <Image url="https://i.imgur.com/Iq0MAc7.png"/>
        </ImageView>
    </HBox>
    <Label fx:id="eventTitle" text="-" GridPane.columnSpan="2" GridPane.halignment="CENTER" GridPane.rowIndex="1"
           GridPane.valignment="CENTER">
        <font>
            <Font name="Avenir Next Condensed Bold" size="26.0"/>
        </font>
    </Label>
    <Label fx:id="eventDetails" text="-" GridPane.columnSpan="2" GridPane.halignment="CENTER" GridPane.rowIndex="4"
           GridPane.valignment="CENTER">
        <font>
            <Font name="Avenir Book" size="14.0"/>
        </font>
    </Label>
    <Button fx:id="joinEventBtn" maxHeight="50.0" maxWidth="110.0" minHeight="50.0" minWidth="110.0"
            mnemonicParsing="false" prefHeight="50.0" prefWidth="110.0"
            style="-fx-background-radius: 25; -fx-background-color: darkred;" text="Join" textFill="#ffb200"
            GridPane.columnSpan="2" GridPane.halignment="CENTER" GridPane.rowIndex="5" GridPane.valignment="CENTER">
        <font>
            <Font name="Arial Bold Italic" size="27.0"/>
        </font>
    </Button>
</GridPane>
