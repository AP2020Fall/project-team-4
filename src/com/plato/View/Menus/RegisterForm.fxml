<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>
<GridPane fx:id="mainGridPane" hgap="10.0" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity"
          minWidth="-Infinity" vgap="10.0" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1"
          fx:controller="Controller.Menus.RegisterFormController">
    <columnConstraints>
        <ColumnConstraints hgrow="SOMETIMES"/>
        <ColumnConstraints hgrow="SOMETIMES"/>
        <ColumnConstraints hgrow="SOMETIMES"/>
    </columnConstraints>
    <rowConstraints>
        <RowConstraints minHeight="10" vgrow="SOMETIMES"/>
        <RowConstraints minHeight="10" vgrow="SOMETIMES"/>
        <RowConstraints minHeight="10" vgrow="SOMETIMES"/>
        <RowConstraints minHeight="10" vgrow="SOMETIMES"/>
        <RowConstraints minHeight="10" vgrow="SOMETIMES"/>
        <RowConstraints minHeight="10" vgrow="SOMETIMES"/>
        <RowConstraints minHeight="10" vgrow="SOMETIMES"/>
    </rowConstraints>
    <padding>
        <Insets bottom="15.0" left="15.0" right="15.0" top="15.0"/>
    </padding>
    <ImageView fx:id="pfp" fitHeight="130.0" fitWidth="125.0" pickOnBounds="true" preserveRatio="true">
        <GridPane.margin>
            <Insets bottom="10.0"/>
        </GridPane.margin>
        <Image url="https://i.imgur.com/vMppUMs.png"/>
    </ImageView>
    <Label text="First Name" GridPane.rowIndex="1">
        <font>
            <Font name="Arial" size="14.0"/>
        </font>
    </Label>
    <TextField fx:id="firstName" promptText="First Name" GridPane.columnIndex="1" GridPane.rowIndex="1"/>
    <Label fx:id="firstNameError" minWidth="60.0" GridPane.columnIndex="2" GridPane.rowIndex="1"/>
    <ImageView fx:id="uploadPfp" fitHeight="30.0" fitWidth="30.0" onMouseClicked="#uploadPfp" pickOnBounds="true"
               preserveRatio="true" GridPane.columnIndex="1" GridPane.halignment="LEFT"
               GridPane.valignment="BOTTOM">
        <GridPane.margin>
            <Insets bottom="15.0"/>
        </GridPane.margin>
        <Image url="https://i.imgur.com/CxCk2qN.png"/>
    </ImageView>
    <Label text="Last Name" GridPane.rowIndex="2">
        <font>
            <Font name="Arial" size="14.0"/>
        </font>
    </Label>
    <TextField fx:id="lastName" promptText="Last Name" GridPane.columnIndex="1" GridPane.rowIndex="2"/>
    <Label fx:id="lastNameError" minWidth="60.0" GridPane.columnIndex="2" GridPane.rowIndex="2"/>
    <Label text="Email" GridPane.rowIndex="3">
        <font>
            <Font name="Arial" size="14.0"/>
        </font>
    </Label>
    <TextField fx:id="email" promptText="Email" GridPane.columnIndex="1" GridPane.rowIndex="3"/>
    <Label fx:id="emailError" minWidth="60.0" GridPane.columnIndex="2" GridPane.rowIndex="3"/>
    <Label text="Phone Number" GridPane.rowIndex="4">
        <font>
            <Font name="Arial" size="14.0"/>
        </font>
    </Label>
    <TextField fx:id="phoneNum" promptText="Phone Number" GridPane.columnIndex="1" GridPane.rowIndex="4"/>
    <Label fx:id="phoneNumError" minWidth="60.0" GridPane.columnIndex="2" GridPane.rowIndex="4"/>
    <HBox fx:id="coinHBox" alignment="CENTER" spacing="5.0" GridPane.columnSpan="3" GridPane.halignment="CENTER"
          GridPane.rowIndex="5" GridPane.valignment="CENTER">
        <SplitMenuButton fx:id="coinMenu" alignment="CENTER" mnemonicParsing="false" text="Coins">
            <font>
                <Font name="Arial" size="14.0"/>
            </font>
        </SplitMenuButton>
        <ImageView fx:id="coinImg" fitHeight="30.0" fitWidth="30.0" pickOnBounds="true" preserveRatio="true">
            <Image url="https://i.imgur.com/Iq0MAc7.png"/>
        </ImageView>
    </HBox>
    <HBox alignment="CENTER" spacing="5.0" GridPane.columnSpan="3" GridPane.halignment="CENTER"
          GridPane.rowIndex="6" GridPane.valignment="CENTER">
        <padding>
            <Insets top="20.0"/>
        </padding>
        <Button mnemonicParsing="false" onAction="#closeStage" text="Cancel">
            <font>
                <Font name="Arial" size="14.0"/>
            </font>
        </Button>
        <Button layoutX="10.0" layoutY="10.0" mnemonicParsing="false" onAction="#signUp" text="Sign-up">
            <font>
                <Font name="Arial" size="14.0"/>
            </font>
        </Button>
    </HBox>
</GridPane>
