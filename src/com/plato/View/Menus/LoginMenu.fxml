         <font>
            <Font name="Arial" size="12.0" />
         </font>
         <padding>
            <Insets top="10.0" />
         </padding>
      </CheckBox>
      <HBox alignment="CENTER" spacing="100.0" GridPane.columnSpan="3" GridPane.rowIndex="4">
         <children>
            <VBox spacing="5.0">
               <children>
                  <Label fx:id="deleteAccount" text="← Delete Account" textFill="#8a0000" />
                  <Label fx:id="signUp" text="← Don't have an account" textFill="#8a0000" />
               </children>
               <padding>
                  <Insets top="5.0" />
               </padding>
            </VBox>
            <Button mnemonicParsing="false" onAction="#login" text="Sign-in">
               <font>
                  <Font name="Arial" size="15.0" />
               </font>
            </Button>
         </children>
      </HBox>
   </children>
