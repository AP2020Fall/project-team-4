<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.CheckBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.SplitPane?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<SplitPane dividerPositions="0.5" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Controller.Menus.EventsTabController">
    <GridPane hgap="10.0" maxHeight="700.0" maxWidth="600.0" minHeight="700.0" minWidth="600.0" vgap="10.0">
        <columnConstraints>
            <ColumnConstraints hgrow="SOMETIMES" />
            <ColumnConstraints hgrow="SOMETIMES" />
        </columnConstraints>
        <rowConstraints>
            <RowConstraints vgrow="SOMETIMES" />
            <RowConstraints vgrow="SOMETIMES" />
        </rowConstraints>
        <VBox alignment="CENTER_LEFT" spacing="5.0">
            <padding>
                <Insets right="15.0" />
            </padding>
            <GridPane.margin>
                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
            </GridPane.margin>
            <CheckBox fx:id="showUpcoming" mnemonicParsing="false" onAction="#filter" text="Upcoming Events">
                <font>
                    <Font name="Arial Bold" size="19.0" />
                </font>
            </CheckBox>
            <CheckBox fx:id="showInSession" layoutX="10.0" layoutY="10.0" mnemonicParsing="false" onAction="#filter" text="In Session Events">
                <font>
                    <Font name="Arial Bold" size="19.0" />
                </font>
            </CheckBox>
            <CheckBox fx:id="showParticipatingIn" layoutX="10.0" layoutY="28.0" mnemonicParsing="false" onAction="#filter" text="Events Participating in">
                <font>
                    <Font name="Arial Bold" size="19.0" />
                </font>
            </CheckBox>
        </VBox>
        <Button fx:id="createEventBtn" maxHeight="75.0" maxWidth="75.0" minHeight="75.0" minWidth="75.0" mnemonicParsing="false" onAction="#createEvent" style="-fx-background-image: url(&quot;https://i.imgur.com/iHRpKIE.pnghttps://i.imgur.com/iHRpKIE.png&quot;); -fx-background-radius: 37.5; -fx-background-size: 75 75;" GridPane.columnIndex="1" GridPane.halignment="RIGHT" GridPane.valignment="TOP">
            <GridPane.margin>
                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
            </GridPane.margin>
        </Button>
        <ListView fx:id="eventsList" minHeight="600.0" GridPane.columnSpan="2" GridPane.rowIndex="1" />
    </GridPane>
    <GridPane fx:id="eventInfo" hgap="5.0" maxWidth="700.0" minWidth="700.0" vgap="5.0" visible="false">
        <columnConstraints>
            <ColumnConstraints hgrow="SOMETIMES" />
            <ColumnConstraints hgrow="SOMETIMES" />
        </columnConstraints>
        <rowConstraints>
            <RowConstraints vgrow="SOMETIMES" />
            <RowConstraints vgrow="SOMETIMES" />
            <RowConstraints vgrow="SOMETIMES" />
            <RowConstraints vgrow="SOMETIMES" />
            <RowConstraints vgrow="SOMETIMES" />
            <RowConstraints vgrow="SOMETIMES" />
        </rowConstraints>
        <ImageView fx:id="eventImg" fitHeight="144.0" fitWidth="663.0" pickOnBounds="true" preserveRatio="true" GridPane.columnSpan="2" GridPane.halignment="CENTER" GridPane.valignment="CENTER" />
        <ImageView fx:id="eventGameImg" fitHeight="150.0" fitWidth="150.0" pickOnBounds="true" preserveRatio="true" GridPane.columnSpan="2" GridPane.halignment="CENTER" GridPane.rowIndex="2" GridPane.valignment="CENTER" />
        <HBox alignment="CENTER" spacing="7.5" GridPane.columnSpan="2" GridPane.rowIndex="3">
            <Label fx:id="eventPrize" text="-">
                <font>
                    <Font name="Ayuthaya" size="18.0" />
                </font>
            </Label>
            <ImageView fx:id="coinImg" fitHeight="30.0" fitWidth="30.0" pickOnBounds="true" preserveRatio="true">
                <image>
                    <Image url="https://i.imgur.com/Iq0MAc7.png" />
                </image>
            </ImageView>
        </HBox>
        <Label fx:id="eventTitle" text="-" GridPane.columnSpan="2" GridPane.halignment="CENTER" GridPane.rowIndex="1" GridPane.valignment="CENTER">
            <font>
                <Font name="Avenir Next Condensed Bold" size="26.0" />
            </font>
        </Label>
        <Label fx:id="eventDetails" text="-" GridPane.columnSpan="2" GridPane.halignment="CENTER" GridPane.rowIndex="4" GridPane.valignment="CENTER">
            <font>
                <Font name="Avenir Book" size="14.0" />
            </font>
        </Label>
        <Button fx:id="joinEventBtn" maxHeight="50.0" maxWidth="110.0" minHeight="50.0" minWidth="110.0" mnemonicParsing="false" onAction="#joinEvent" prefHeight="50.0" prefWidth="110.0" style="-fx-background-radius: 25; -fx-background-color: darkred;" text="Join" textFill="#ffb200" GridPane.columnSpan="2" GridPane.halignment="CENTER" GridPane.rowIndex="5" GridPane.valignment="CENTER">
            <font>
                <Font name="Arial Bold Italic" size="27.0" />
            </font>
        </Button>
    </GridPane>
</SplitPane>
